<header>
  <%= link_to root_path do %>
    <%= image_tag("cropped-logo_eleva.png", size: "100x100", class: "img") %>
  <% end %>
  <div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Opções:
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%= link_to "Adicionar turma", new_school_group_path(@school), class: "dropdown-item" %>
    <%= link_to "Editar escola", edit_school_path, class: "dropdown-item" %>
    <%= button_to 'Excluir escola', school_path(@school), class: "dropdown-item", method: :delete, data: {confirm: "Tem certeza?"} %>
    <%= link_to "Voltar", root_path, class: "dropdown-item" %>
  </div>
</div>
</header>

<h2> <%= @school.name %> </h2>
<br>
<ul>
  <% @school.groups.each do |group| %>
    <li> <%= group.name %> <%= button_to 'Delete', school_group_path(@school, group), method: :delete, data: {confirm: "Tem certeza?"} %>
 </li>
  <% end %>
</ul>
<br>
