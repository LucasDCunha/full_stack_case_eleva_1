<nav class="navbar navbar-expand-lg navbar-light">
  <%= link_to root_path do %>
    <%= image_tag("cropped-logo_eleva.png", size: "100x100", class: "img") %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Adicionar turma", new_school_group_path(@school), class: "dropdown-item" %>
      </li>
      <li class="nav-item">
        <%= link_to "Editar escola", edit_school_path, class: "dropdown-item" %>
      </li>
      <li class="nav-item">
        <%= button_to 'Excluir escola', school_path(@school), class: "dropdown-item", method: :delete, data: {confirm: "Tem certeza?"} %>
      </li>
      <li class="nav-item">
        <%= link_to "Voltar", root_path, class: "dropdown-item" %>
      </li>
    </ul>
  </div>
</nav>

<h2 class="mb-4"> Colegio: <%= @school.name %> </h2>

<div class="grid">
  <% @school.groups.each do |group| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-center"><%= group.name %></h5>
        <%= button_to 'Deletar turma', school_group_path(@school, group), class: "btn btn-sm btn-outline-danger",method: :delete, data: {confirm: "Tem certeza?"} %>
      </div>
    </div>
  <% end %>
</div>
