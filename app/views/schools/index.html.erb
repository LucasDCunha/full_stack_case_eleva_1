<header>
  <%= link_to root_path do %>
    <%= image_tag("cropped-logo_eleva.png", size: "100x100", class: "img") %>
  <% end %>
  <div>
    <%= link_to "Nova escola", new_school_path, class: "btn btn-outline-primary" %>
  </div>
</header>


<div class="grid">

  <% @schools.each do |school| %>
  <%= link_to school_path(school) do%>
  <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= school.name %></h5>
        <p class="card-text"><%= school.address %>, <%= school.city %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
